{
    "[python]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": false,
        "editor.detectIndentation": true,
    },
    "python.formatting.provider": "autopep8",
    "python.formatting.blackArgs": [
        "--line-length",
        "119",
    ],
    "python.formatting.autopep8Args": [
        "--indent-size=2",
        "--ignore=E121"
    ],
    "prettier.printWidth": 80
}